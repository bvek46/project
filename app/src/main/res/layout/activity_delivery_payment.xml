<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DC0C0C0"
    tools:context=".delivery_paymentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/box"
                android:layout_width="540dp"
                android:layout_height="65dp"
                android:background="@color/navey_blue"
                android:drawableStart="@drawable/arrow_back"
                android:drawableLeft="@drawable/arrow_back"
                android:drawablePadding="30dp"
                android:paddingLeft="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="70dp"
                android:layout_marginTop="18dp"
                android:text="Delivery and Payment"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/booked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:text="Booked vehicle"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="145dp"
                    android:background="@color/white" />
            </LinearLayout>



            <ImageView
                android:id="@+id/car"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/carlist" />

            <TextView
                android:id="@+id/car1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Porsche 911 Turbo"
                android:textSize="19sp"
                android:textColor="@color/navey_blue"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="198dp"/>

            <TextView
                android:id="@+id/price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.5000/day"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_below="@+id/car1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="198dp"/>

            <Button
                android:id="@+id/button"
                android:layout_width="152dp"
                android:layout_height="45dp"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="250dp"
                android:layout_below="@id/price1"
                android:text="Cancel"
                android:shadowRadius="30"
                android:textColor="@color/navey_blue"
                android:textSize="17sp"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button"
                android:text="Address"
                android:textSize="20sp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginTop="420dp"
                    android:background="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/pulchowk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulchowk"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@id/address"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="25dp"/>




                <View
                    android:layout_width="320dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/pulchowk"
                    android:background="#B8C4D0"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"/>


            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jun 22,10:00AM-Jun 25,10:00 AM"
                android:layout_below="@id/pulchowk"
                android:textSize="18sp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/black"
                android:layout_marginTop="45dp"/>

            <TextView
                android:id="@+id/phoneview"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/time1"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/ic_baseline_phone_in_talk_24"
                android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
                android:drawablePadding="40dp"
                android:background="#80808080"
                android:textSize="17sp" />

            <TextView

                android:id="@+id/mailview"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/phoneview"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="40dp"
                android:background="#80808080"
                android:textSize="17sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="760dp"
                    android:background="@color/white" />



            </LinearLayout>

            <TextView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment option"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:layout_below="@id/mailview"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="30dp" />

            <ImageView
                android:layout_width="155dp"
                android:layout_height="120dp"
                android:layout_below="@id/mailview"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="230dp"
                android:src="@drawable/cod"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="959dp"
                    android:background="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_below="@+id/payment"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:id="@+id/subtotal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.7,500"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_below="@+id/payment"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="300dp"
                />

            <TextView
                android:id="@+id/shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping fee"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_below="@+id/subtotal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:id="@+id/shipping1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.400"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_below="@+id/subtotal1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="311dp"
                />

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping fee discount"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_below="@+id/shipping"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:id="@+id/discount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Rs.400"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_below="@+id/shipping1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="310dp"
                />

            <EditText
                android:id="@+id/voucher"
                android:layout_width="243dp"
                android:layout_height="45dp"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/discount"
                android:hint="Enter voucher code"
                android:layout_marginLeft="30dp"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="300dp"
                android:layout_below="@id/discount1"
                android:text="Apply"
                android:shadowRadius="30"
                android:textColor="@color/navey_blue"
                android:textSize="17sp"
                android:backgroundTint="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="1250dp"
                    android:background="@color/white" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_below="@id/voucher"
                android:layout_marginTop="115dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.7,500"
                android:textColor="@color/navey_blue"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_below="@id/voucher"
                android:layout_marginTop="115dp"
                android:layout_marginLeft="78dp"/>

            <Button
                android:id="@+id/ok4"
                android:layout_width="152dp"
                android:layout_height="45dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="250dp"
                android:layout_below="@+id/button1"
                android:text="Continue"
                android:shadowRadius="30"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:backgroundTint="@color/navey_blue"/>


        </RelativeLayout>
    </ScrollView>
        </RelativeLayout>
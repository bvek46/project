<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DC0C0C0"
    tools:context=".dateActivity">


    <TextView
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@color/white"
        android:drawableStart="@drawable/arrow_back"
        android:drawableTint="@color/navey_blue"
        android:paddingLeft="10dp"
        android:paddingBottom="200dp" />

    <TextView
        android:id="@+id/where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where"
        android:textSize="20sp"
        android:textColor="@color/navey_blue"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        />

    <Spinner
        android:id="@+id/spinnerr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/where"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:drawablePadding="5dp" />

    <TextView
        android:id="@+id/dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerr"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Trip Dates"
        android:textColor="@color/navey_blue"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@id/dates"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="#80808080"
        android:hint="Select a Date"
        android:paddingLeft="40dp"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/calendar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/dates"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/cal" />


    <Button
        android:id="@+id/done"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:layout_below="@+id/text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/navey_blue"
        android:shadowRadius="30"
        android:text="Done"
        android:textColor="@color/white"
        android:textSize="17sp" />

</RelativeLayout>